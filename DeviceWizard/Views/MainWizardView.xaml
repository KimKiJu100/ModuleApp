<UserControl x:Class="DeviceWizard.Views.MainWizardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dx ="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:prims="http://prismlibrary.com/"
             xmlns:local="clr-namespace:DeviceWizard.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" prims:ViewModelLocator.AutoWireViewModel="True">
    <DockPanel>
        <dxe:ListBoxEdit DockPanel.Dock="Left"
                         Width="200"
                         ItemsSource="{Binding Steps}"
                         SelectedItem="{Binding CurrentStep}"
                         DisplayMember="Name"
                         IsReadOnly="True"/>

        <!-- Content Area -->
        <StackPanel>
            <ContentControl Content="{Binding CurrentStep.Content}" Margin="10"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <dx:SimpleButton Content="Back" Command="{Binding PrevCommand}" Width="80" Margin="5"/>
                <dx:SimpleButton Content="Next" Command="{Binding NextCommand}" Width="80" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</UserControl>
